<!doctype html>
<html lang="en-US">
  <title>CMS</title>
  <link rel="stylesheet" href="/cms.css" type="text/css" />
  <body>
    <header>
      <div class="actions">
        <%= yield_content :header_links %>
      </div>
    </header>

    <main>
      <% if session[:message] %>
        <p class="message"><%= session.delete(:message) %></p>
      <% end %>

      <%= yield %>
    </main>
  </body>
</html>